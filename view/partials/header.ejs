<header class="bg-blue-600 dark:bg-blue-800 text-white shadow-lg">
    <div class="container mx-auto flex justify-between items-center px-6 py-4">
        <!-- Logo -->
        <a href="/" class="flex items-center space-x-2">
            <img src="/assets/images/logotype.png" alt="Logo" class="h-10">
            <span class="font-bold text-2xl tracking-wide text-yellow-400">INFOTEP</span>
        </a>

        <!-- Navegación -->
        <nav class="hidden md:flex items-center space-x-6">
            <a href="/admin" class="text-white hover:text-yellow-300 transition duration-300 font-medium">Home</a>
            <a href="/list-menu" class="text-white hover:text-yellow-300 transition duration-300 font-medium">Lista de
                menú</a>
            <a href="/list-users" class="text-white hover:text-yellow-300 transition duration-300 font-medium">Lista de
                usuarios</a>
            <a href="/historial"
                class="text-white hover:text-yellow-300 transition duration-300 font-medium">Historial</a>

            <!-- Condición para mostrar enlaces diferentes dependiendo del rol -->
            <% if (user && user.role==='admin' ) { %>
                <a href="/admin" class="text-white hover:text-yellow-300 transition duration-300 font-medium">Home</a>
                <a href="/list-users" class="text-white hover:text-yellow-300 transition duration-300 font-medium">Lista
                    de usuarios</a>
                <a href="/list-menu" class="text-white hover:text-yellow-300 transition duration-300 font-medium">Lista
                    de menú</a>
                <a href="/historial"
                    class="text-white hover:text-yellow-300 transition duration-300 font-medium">Historial</a>
                <% } else if (user && user.role==='teacher' ) { %>
                    <a href="/teacher/menu"
                        class="text-white hover:text-yellow-300 transition duration-300 font-medium">Home</a>
                    <a href="/list-menu" class="text-white hover:text-yellow-300 transition duration-300 font-medium">Mi
                        historial</a>
                    <a href="/teacher/assignments"
                        class="text-white hover:text-yellow-300 transition duration-300 font-medium">Perfil</a>
                    <% } %>
                        <button id="logout-btn" class="bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600">
                            Cerrar Sesión
                        </button>
        </nav>

        <!-- Menú móvil -->
        <button id="menuToggle"
            class="md:hidden flex items-center text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-white">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
            </svg>
        </button>
    </div>

    <!-- Menú desplegable móvil -->
    <div id="mobileMenu" class="hidden md:hidden bg-blue-600 dark:bg-blue-800">
        <nav class="flex flex-col space-y-4 p-4">
            <a href="/admin" class="text-white hover:text-yellow-300 transition duration-300 font-medium">Home</a>
            <a href="/list-menu" class="text-white hover:text-yellow-300 transition duration-300 font-medium">Lista de
                menú</a>
            <a href="/list-users" class="text-white hover:text-yellow-300 transition duration-300 font-medium">Lista de
                usuarios</a>
            <a href="/historial"
                class="text-white hover:text-yellow-300 transition duration-300 font-medium">Historial</a>

            <!-- Condición móvil para rol -->
            <% if (user && user.role==='admin' ) { %>
                <a href="/admin" class="text-white hover:text-yellow-300 transition duration-300 font-medium">Home</a>
                <a href="/list-menu" class="text-white hover:text-yellow-300 transition duration-300 font-medium">Lista
                    de menú</a>
                <a href="/list-users" class="text-white hover:text-yellow-300 transition duration-300 font-medium">Lista
                    de usuarios</a>
                <a href="/historial"
                    class="text-white hover:text-yellow-300 transition duration-300 font-medium">Historial</a>
                <% } else if (user && user.role==='teacher' ) { %>
                    <a href="/teacher/menu"
                        class="text-white hover:text-yellow-300 transition duration-300 font-medium">Home</a>
                    <a href="/list-menu" class="text-white hover:text-yellow-300 transition duration-300 font-medium">Mi
                        historial</a>
                    <a href="/teacher/assignments"
                        class="text-white hover:text-yellow-300 transition duration-300 font-medium">Perfil</a>
                    <% } %>

                        <button id="logout-btn" class="bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600">
                            Cerrar Sesión
                        </button>
        </nav>
    </div>
</header>
