<header class="bg-blue-500 dark:bg-gray-800 text-white shadow-md">
    <div class="container mx-auto flex justify-between items-center px-6 py-4">
        <!-- Logo -->
        <a href="/" class="flex items-center space-x-2">
            <img src="/assets/images/logotype.png" alt="Logo" class="h-8">
            <span class="font-bold text-lg tracking-wide">INFOTEP</span>
        </a>

        <!-- Navegación -->
        <nav class="hidden md:flex items-center space-x-6">

            <a href="/admin" class="text-white hover:text-gray-200 font-medium">Home</a>
            <a href="/list-menu" class="text-white hover:text-gray-200 font-medium">Lista de menu</a>
            <a href="/list-users" class="text-white hover:text-gray-200 font-medium">Lista de usuarios</a>
            <a href="/historial" class="text-white hover:text-gray-200 font-medium">Historial</a>

            <!-- Condición para mostrar enlaces diferentes dependiendo del rol -->
            <% if (user && user.role === 'admin') { %>

                <a href="/admin" class="text-white hover:text-gray-200 font-medium">Home</a>
                <a href="/list-users" class="text-white hover:text-gray-200 font-medium">Lista de usuarios</a>
                <a href="/list-menu" class="text-white hover:text-gray-200 font-medium">Lista de menu</a>
                <a href="/historial" class="text-white hover:text-gray-200 font-medium">Historial</a>

            <% } else if (user && user.role === 'teacher') { %>
                <a href="/teacher/menu" class="text-white hover:text-gray-200 font-medium">Home</a>
                <a href="/list-menu" class="text-white hover:text-gray-200 font-medium">Mi historial</a>
                <a href="/teacher/assignments" class="text-white hover:text-gray-200 font-medium">Perfil</a>
            <% } %>

            <!-- Botón Cerrar Sesión, solo si el usuario está autenticado -->
            <% if (user) { %>
                <a href="/logout" class="bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-md">Cerrar Sesión</a>
            <% } %>
        </nav>

        <!-- Botones de acción para no autenticados -->
        <div class="hidden md:flex items-center space-x-4">
            <% if (!user) { %>
                <a href="/logout" class="bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-md">Cerrar Sesión</a>
            <% } %>
        </div>

        <!-- Menú móvil -->
        <button id="menuToggle" class="md:hidden flex items-center text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-white">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
            </svg>
        </button>
    </div>

    <!-- Menú desplegable móvil -->
    <div id="mobileMenu" class="hidden md:hidden bg-blue-500 dark:bg-gray-800">
        <nav class="flex flex-col space-y-4 p-4">
             <a href="/admin" class="text-white hover:text-gray-200 font-medium">Home</a>
            <a href="/list-menu" class="text-white hover:text-gray-200 font-medium">Lista de menu</a>
            <a href="/list-users" class="text-white hover:text-gray-200 font-medium">Lista de usuarios</a>
            <a href="/historial" class="text-white hover:text-gray-200 font-medium">Historial</a>

            <!-- Condición móvil para rol -->
            <% if (user && user.role === 'admin') { %>
                <a href="/admin" class="text-white hover:text-gray-200 font-medium">Home</a>
            <a href="/list-menu" class="text-white hover:text-gray-200 font-medium">Lista de menu</a>
            <a href="/list-users" class="text-white hover:text-gray-200 font-medium">Lista de usuarios</a>
            <a href="/historial" class="text-white hover:text-gray-200 font-medium">Historial</a>
            <% } else if (user && user.role === 'teacher') { %>
                <a href="/teacher/menu" class="text-white hover:text-gray-200 font-medium">Home</a>
                <a href="/list-menu" class="text-white hover:text-gray-200 font-medium">Mi historial</a>
                <a href="/teacher/assignments" class="text-white hover:text-gray-200 font-medium">Perfil</a>
            <% } %>

           
                <a href="/logout" class="bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-md text-center">Cerrar Sesión</a>
          
        </nav>
    </div>
</header>
