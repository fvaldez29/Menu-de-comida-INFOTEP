


        <form action="/register" method="POST" class="w-full flex flex-col gap-4">
            <!-- Nombre -->
            <div class="flex items-start flex-col justify-start">
                <label for="name" class="text-sm text-gray-700 dark:text-gray-200 mb-2">Nombre:</label>
                <input type="text" id="name" name="name" placeholder="Ingresa tu nombre"
                    class="w-full px-3 dark:text-gray-200 dark:bg-gray-900 py-2 rounded-md border border-gray-300 dark:border-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    required>
            </div>
        
            <!-- Apellido -->
            <div class="flex items-start flex-col justify-start">
                <label for="lastName" class="text-sm text-gray-700 dark:text-gray-200 mb-2">Apellido:</label>
                <input type="text" id="lastName" name="lastName" placeholder="Ingresa tu apellido"
                    class="w-full px-3 dark:text-gray-200 dark:bg-gray-900 py-2 rounded-md border border-gray-300 dark:border-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    required>
            </div>
        
            <!-- Correo Electrónico -->
            <div class="flex items-start flex-col justify-start">
                <label for="email" class="text-sm text-gray-700 dark:text-gray-200 mb-2">Correo Electrónico:</label>
                <input type="email" id="email" name="email" placeholder="Ingresa tu correo electrónico"
                    class="w-full px-3 dark:text-gray-200 dark:bg-gray-900 py-2 rounded-md border border-gray-300 dark:border-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    required>
            </div>
        
            <!-- Cédula -->
            <div class="flex items-start flex-col justify-start">
                <label for="cedula" class="text-sm text-gray-700 dark:text-gray-200 mb-2">Cédula:</label>
                <input type="text" id="cedula" name="cedula" placeholder="Ingresa tu cédula"
                    class="w-full px-3 dark:text-gray-200 dark:bg-gray-900 py-2 rounded-md border border-gray-300 dark:border-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    required>
            </div>
        
            <!-- Género -->
            <div class="flex items-start flex-col justify-start">
                <label for="genre" class="text-sm text-gray-700 dark:text-gray-200 mb-2">Género:</label>
                <select id="genre" name="genre"
                    class="w-full px-3 dark:text-gray-200 dark:bg-gray-900 py-2 rounded-md border border-gray-300 dark:border-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    required>
                    <option value="Masculino">Masculino</option>
                    <option value="Femenino">Femenino</option>
                </select>
            </div>
        
            <!-- Departamento -->
            <div class="flex items-start flex-col justify-start">
                <label for="department" class="text-sm text-gray-700 dark:text-gray-200 mb-2">Departamento:</label>
                <input type="text" id="department" name="department" placeholder="Ingresa tu departamento"
                    class="w-full px-3 dark:text-gray-200 dark:bg-gray-900 py-2 rounded-md border border-gray-300 dark:border-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    required>
            </div>
        
            <!-- Rol -->
            <div class="flex items-start flex-col justify-start">
                <label for="role" class="text-sm text-gray-700 dark:text-gray-200 mb-2">Rol:</label>
                <select id="role" name="role"
                    class="w-full px-3 dark:text-gray-200 dark:bg-gray-900 py-2 rounded-md border border-gray-300 dark:border-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    required>
                    <option value="facilitador">Facilitador</option>
                    <option value="admin">Admin</option>
                </select>
            </div>
        
            <!-- Contraseña -->
            <div class="flex items-start flex-col justify-start">
                <label for="password" class="text-sm text-gray-700 dark:text-gray-200 mb-2">Contraseña:</label>
                <input type="password" id="password" name="password" placeholder="Ingresa tu contraseña"
                    class="w-full px-3 dark:text-gray-200 dark:bg-gray-900 py-2 rounded-md border border-gray-300 dark:border-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    required>
            </div>
        
            <!-- Confirmar Contraseña -->
            <div class="flex items-start flex-col justify-start">
                <label for="confirmPassword" class="text-sm text-gray-700 dark:text-gray-200 mb-2">Confirmar Contraseña:</label>
                <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirma tu contraseña"
                    class="w-full px-3 dark:text-gray-200 dark:bg-gray-900 py-2 rounded-md border border-gray-300 dark:border-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    required>
            </div>
        
            <!-- Botón de Registro -->
            <button type="submit"
                class="w-full bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500">Registrar</button>
        </form>
        

        <div class="mt-4 text-center">
            <span class="text-sm text-gray-500 dark:text-gray-300">¿Ya tienes una cuenta? </span>
            <a href="/login"
                class="text-blue-500 hover:text-blue-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">Iniciar sesión</a>
        </div>

