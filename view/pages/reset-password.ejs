<form id="reset-password-form" class="w-full flex flex-col gap-4">
    <div class="mb-4">
        <label for="email" class="text-sm font-medium text-gray-700 dark:text-gray-300">Correo electrónico</label>
        <input type="email" id="email" name="email" class="w-full p-3 rounded-md border border-gray-300 dark:border-gray-600 bg-gray-100 dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-blue-500 focus:outline-none" required>
