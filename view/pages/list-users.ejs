<section>
    <h1 class="text-2xl font-bold mb-4">Lista de Usuarios</h1>
    <table class="w-full table-auto border-collapse border border-gray-300 dark:border-gray-700">
        <thead>
            <tr class="bg-blue-500 dark:bg-gray-800 text-white">
                <th class="border border-gray-300 dark:border-gray-700 px-4 py-2">Nombre</th>
                <th class="border border-gray-300 dark:border-gray-700 px-4 py-2">Apellido</th>
                <th class="border border-gray-300 dark:border-gray-700 px-4 py-2">Correo</th>
                <th class="border border-gray-300 dark:border-gray-700 px-4 py-2">Rol</th>
                <th class="border border-gray-300 dark:border-gray-700 px-4 py-2">Acciones</th>
            </tr>
        </thead>
        <tbody>
           
                <tr class="bg-white dark:bg-gray-900">
                    <td class="border border-gray-300 dark:border-gray-700 px-4 py-2"><%= user.name %></td>
                    <td class="border border-gray-300 dark:border-gray-700 px-4 py-2"><%= user.lastName %></td>
                    <td class="border border-gray-300 dark:border-gray-700 px-4 py-2"><%= user.email %></td>
                    <td class="border border-gray-300 dark:border-gray-700 px-4 py-2"><%= user.role %></td>
                    <td class="border border-gray-300 dark:border-gray-700 px-4 py-2 text-center">
                        <a href="/admin/edit-user/<%= user.id %>" class="text-blue-600 hover:underline">Editar</a> | 
                        <a href="/admin/delete-user/<%= user.id %>" class="text-red-600 hover:underline">Eliminar</a>
                    </td>
                </tr>
        
        </tbody>
    </table>
</section>
