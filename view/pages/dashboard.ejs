<section class="max-w-4xl mx-auto p-6 bg-white shadow-md rounded-lg">
    <h1 class="text-3xl font-bold mb-6 text-gray-800">Agregar Menú</h1>
    <form action="/admin/add-menu" method="POST" class="space-y-6">
        <!-- Campo Día -->
        <div>
            <label for="day" class="block text-sm font-medium text-gray-700">Día:</label>
            <select 
                id="day" 
                name="day" 
                class="w-full mt-1 px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                <option value="Lunes">Lunes</option>
                <option value="Martes">Martes</option>
                <option value="Miércoles">Miércoles</option>
                <option value="Jueves">Jueves</option>
                <option value="Viernes">Viernes</option>
            </select>
        </div>

        <!-- Campo Menú -->
        <div>
            <label for="menu" class="block text-sm font-medium text-gray-700">Menú:</label>
            <textarea 
                id="menu" 
                name="menu" 
                rows="4" 
                placeholder="Describe el menú del día..." 
                class="w-full mt-1 px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"></textarea>
        </div>

        <!-- Botón -->
        <div class="text-right">
            <button 
                type="submit" 
                class="bg-blue-600 text-white font-medium px-6 py-3 rounded-md shadow hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
                Guardar Menú
            </button>
        </div>
    </form>
</section>
